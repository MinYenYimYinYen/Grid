<Window x:Class="Grid.MainWindow"
        Name="Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Grid"
        xmlns:m="clr-namespace:Microsoft.Maps.MapControl.WPF;assembly=Microsoft.Maps.MapControl.WPF"
        xmlns:b="clr-namespace:Grid.Models"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="350"
        Width="525">
    <Window.Resources>
        <b:Brain x:Key="Brain" />
    </Window.Resources>
    <Grid DataContext="{StaticResource Brain}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <WrapPanel Name="wp_Top">
            <StackPanel Name="sp_Divisions">
                <WrapPanel>
                    <Label Content="Vertical Divisions:"
                           Width="125" />
                    <TextBox Width="25"
                             Text="{Binding Path=HOL010.DivLon}" />
                    <Button Name="btn_ApplyVertDivisions"
                            Content="Apply" 
                            Command="{Binding Path=ApplyLatDivisions}"/>
                </WrapPanel>
                <WrapPanel>
                    <Label Content="Horizontal Divisions:"
                           Width="125" />
                    <TextBox Width="25" 
                             Text="{Binding Path=HOL010.DivLat}" />
                    <Button Name="btn_ApplyHoriDivisions"
                            Content="Apply"
                            Command="{Binding Path=ApplyLonDivisions}"/>
                </WrapPanel>
            </StackPanel>
            <StackPanel Name="sp_DivisionsButton">
   
            </StackPanel>
        </WrapPanel>
        <m:Map Name="MainMap"
               Grid.Row="1"
               CredentialsProvider="Atu4AQp2CNh0a2jeTlH3PwPWtCV-DyjxvTL2f4k2COQmV6407he4vlP2aJw9fZju"
               ZoomLevel="16"
               Center="{Binding Path=HOL010.Center}">

        </m:Map>
    </Grid>
</Window>
